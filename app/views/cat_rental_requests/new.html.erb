<h1>Rent yourself a cat!</h1>

<form action="<%= cat_rental_requests_url%>" method="POST">
  <label for="cat_name">Select Cat:</label>
  <select id="cat_name" name="cat_rental_request[cat_id]">
    <option></option>
    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name.capitalize %></option>
    <% end %>
  </select>
  <br><br>
  
  <label for="start_date">Start Date:</label>  
  <input 
    type="date" 
    name="cat_rental_request[start_date]" 
    id="start_date">
  <br><br>
  
  <label for="end_date">End Date:</label>  
  <input 
    type="date" 
    name="cat_rental_request[end_date]" 
    id="end_date">
  <br><br>
    
    <input type="submit" value="Request your cat!">
</form>